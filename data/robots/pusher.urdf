<?xml version="1.0"?>
<robot name="pusher" xmlns:xacro="http://www.ros.org/wiki/xacro">

 <link name="pusher_base"/>
 <link name="pusher_slider"/>
 <link name="pusher_tool">
     <visual>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
      <material name="LightGrey">
        <color rgba="1.0 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
	    <box size="0.04 0.04 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="4.0"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
    </inertial>
  </link>
